%% * Macro definitions
%% ** Fonts
\newcommand{\mc}[1]{\mathcal{#1}} % calligraphic math
\newcommand{\mf}[1]{\mathfrak{#1}} % fraktur math
\newcommand{\mbb}[1]{\mathbb{#1}} % blackboard math
\newcommand{\mbf}[1]{\mathbf{#1}} % boldface math
\newcommand{\mb}[1]{\mathbf{#1}} % boldface math
\newcommand{\mrm}[1]{\mathrm{#1}} % math
\newcommand{\ms}[1]{\mathscr{#1}} % script math

%% ** Noteworthy sets
\newcommand{\N}{\mathbb{N}} % naturals
\newcommand{\Z}{\mathbb{Z}} % integers
\newcommand{\Q}{\mathbb{Q}} % rationals
\newcommand{\R}{\mathbb{R}} % reals
\newcommand{\C}{\mathbb{C}} % complex numbers
\newcommand{\WW}{\mathbb{W}} % Walsh numbers
\newcommand{\KK}{\mathbb{K}} % a number field
\newcommand{\FF}{\mathbb{F}} % finite field
\newcommand{\HH}{\mathbb{H}} % quaternions or hyperbolic space

%% ** Function spaces / sets
\newcommand{\Sch}{\ms{S}} % Schwarz space
\newcommand{\Bor}{\ms{B}} % Borel functions/sets
\newcommand{\Lip}{\mathrm{Lip}} % Lipschitz functions
\newcommand{\loc}{\mathrm{loc}} % locally (e.g. L^{1}_{\loc})

%% ** Linear algebra
\newcommand{\Lin}{\mathcal{L}} % bounded linear maps
\newcommand{\End}{\mathrm{End}} % endomorphisms
\newcommand{\Hom}{\mathrm{Hom}} % homomorphism
\newcommand{\Gl}{\mathrm{Gl}} % linear group
\newcommand{\Sl}{\mathrm{Sl}} % special linear group
\newcommand{\SU}{\mathrm{SU}} % special unitary group
\newcommand{\id}{\mathrm{id}} % identity operator
\newcommand{\rk}{\mathrm{rk}} % rank
\newcommand{\tr}{\mathrm{tr}} % trace

%% ** point set topology / metric spaces
\newcommand{\diam}{\mathrm{diam}} % diameter
\newcommand{\dist}{\mathrm{dist}} % distance
\newcommand{\spt}{\mathrm{spt}} % support

%% ** Miscellaneous math
\newcommand{\eqdef}{\coloneqq} % assignment
\newcommand{\eqd}{\coloneqq} % assignment
\newcommand{\dd}{\mathrm{d}} % d of the differential
\newcommand{\st}{\colon} % such that
\newcommand{\Fourier}{\mathfrak{F}} % Fourier transform operator
\newcommand{\FT}[1]{\widehat{#1}} % Fourier transform symbol
\newcommand{\pv}{\mathrm{pv}} % principle value
\newcommand{\E}{\mathbb{E}} % expectation
\newcommand{\restrict}[1]{\raisebox{-3pt}{\big\lvert}_{{#1}}}
\newcommand{\1}{\mathbbm{1}} % characteristic function
\newcommand{\sgn}{\mathrm{sgn}} % signum function

%% ** LHS and RHS of eqns
\newcommand{\LHS}[1]{\ensuremath{\mathrm{LHS}{#1}}}
\newcommand{\RHS}[1]{\ensuremath{\mathrm{RHS}{#1}}}

%% ** Symmetry operators
\newcommand{\Mod}{\mathrm{Mod}} % modulation
\newcommand{\Tr}{\mathrm{Tr}} % translation
\newcommand{\Dil}{\mathrm{Dil}} % dilation

%% ** Better rendering
\renewcommand{\bar}[1]{\overline{#1}} % complex conjugation
\renewcommand{\tilde}[1]{\widetilde{#1}} % better tilde
\renewcommand{\phi}{\varphi} % phi rendering
\renewcommand{\epsilon}{\varepsilon} % epsilon rendering




